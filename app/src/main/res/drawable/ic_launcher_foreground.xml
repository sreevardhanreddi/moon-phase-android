<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- Krishna Paksha 11th day - Waning Gibbous -->
    <!-- Moon looks like "C" shape - bright on left, shadow on right -->

    <!-- Moon base circle (cream/beige color) centered at 54,54 with radius 28 -->
    <path
        android:fillColor="#F5F5DC"
        android:pathData="M26,54
            A28,28 0 1,1 82,54
            A28,28 0 1,1 26,54 Z" />

    <!-- Shadow crescent on RIGHT side for waning moon -->
    <!-- Start at top, arc clockwise (right side) to bottom, curve back -->
    <path
        android:fillColor="#000000"
        android:pathData="M54,26
            A28,28 0 0,1 54,82
            A12,28 0 0,1 54,26 Z" />

</vector>
